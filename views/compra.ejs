    <main>
        <div class="container">
            <div class="row mt-3">
                <div class="col">
                    <h2 class="d-flex justify-content-center mb-3">Realizar Compra</h2>
                  <form class="row" action="/checkout" method="POST">
            <!-- Start col -->
            <div class="col-md-12 col-lg-12 col-xl-12">
                <div class="card m-b-30">
                    <div class="card-header">
                        <h5 class="card-title">Cart</h5>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-lg-10 col-xl-8">
                                <div class="cart-container">
                                    <div class="cart-head">
                                        <div class="table-responsive">
                                            <table class="table table-borderless">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Action</th>                                               
                                                        <th scope="col">Product</th>
                                                        <th scope="col">Qty</th>
                                                        <th scope="col">Price</th>
                                                        <th scope="col" class="text-right">Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% var sub = 0; %>
                                                  <% for (var i = 0; i < data.length; i++) { %>
                                                    <% var tot = (data[i].price *  data[i].cantidad);
                                                        sub = sub + tot;
                                                     %>
                                                     
                                                    <tr>
                                                        <th scope="row"><%= i+1 %></th>
                                                        <td><a href="#" class="text-danger"><i class="ri-delete-bin-3-line"></i></a></td>
                                                        <td> <%= data[i].name %> </td>
                                                        <input type="text" hidden value="<%= data[i].name %>" name="name">
                                                        <td>
                                                            <div class="form-group mb-0">
                                                                <input type="text" class="form-control cart-qty" name="cartQty1" id="cartQty1" value="<%= data[i].cantidad %>" readonly>
                                                                <input type="text" class="form-control cart-qty" name="qty" id="cartQty1" value="<%= data[i].cantidad %>" hidden>
                                                            </div>
                                                        </td>
                                                        <td>$<%= data[i].price %></td>
                                                        <input type="text" hidden value="<%= data[i].price %>" name="price">
                                                        <td class="text-right">$ <%= tot.toFixed(2) %> </td>
                                                    </tr>
                                                  <%   } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="cart-body">
                                        <div class="row">
                                           
                                            <div class="col-md-12 order-1 order-lg-2 col-lg-7 col-xl-6">
                                                <div class="order-total table-responsive ">
                                                    <table class="table table-borderless text-right">
                                                        <tbody>
                                                            <tr>
                                                                <td>Sub Total :</td>
                                                                <td>$ <%= sub.toFixed(2) %> MXN</td>
                                                            </tr>
                
                                                            <tr>
                                                                <td class="f-w-7 font-18"><h4>Amount :</h4></td>
                                                                <td class="f-w-7 font-18"><h4>$<%= sub.toFixed(2) %> MXN</h4></td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="cart-footer text-right">
                                        <button type="submit" class="btn btn-success my-1">Proceder al pago</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End col -->
        </form>


