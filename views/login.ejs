      <!--
		  EL LOGIN EMPIEZA DESDE AQUI
	  -->
        <div class="login-box">
      <div class="login-box-body" id="formContent">
        <p class="login-box-msg">Ingrese sus datos de Acceso</p>
        <form action="/login" method="POST">
          <input type="text" id="login" name="user" class="fadeIn second" name="login" placeholder="login">
          <input type="password" id="password" name="pass" class="fadeIn third" name="login" placeholder="password">
          <button type="submit" class="btn btn-primary btn-lg">Log in</button>
          <a href="/register">Registrate</a>
        </form>
      </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
<footer class="page-footer font-small blue pt-4 bg-light">
  <div class="container-fluid text-center text-md-left">
