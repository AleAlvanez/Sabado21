<body>

	<!-- main -->
	<div class="main-w3layouts wrapper">
		<h1>Registrate</h1>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form id="dataForm" action="/register" method="POST">
					<input class="text" type="text" id="name" name="name" placeholder="Nombre(s)" required="">
					<input class="text" type="text" id="user" name="user" placeholder="Username" required="">
					<input class="text email" type="email" id="email" name="email" placeholder="Email" required="">
					<input class="text" type="password" id="password" name="password" placeholder="Contraseña" required="">
					<input class="text w3lpass" type="password" id="password2" placeholder="Confirma Contraseña" required="">
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" class="checkbox" required="">
							<span>Al registrarme acepto terminos y condiciones</span>
						</label>
						<div class="clear"> </div>
					</div>
					<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
						<button type="submit" class="btn btn-primary btn-lg">Registrarse</button>
					  </div>
				</form>

				<p>¿Ya tienes una cuenta?<a href="/login">¡Inicia sesión ahora!</a></p>
			</div>
		</div>
